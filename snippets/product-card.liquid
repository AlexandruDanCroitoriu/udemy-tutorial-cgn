<div class="w-full py-6 px-3">
  <div class="border border-gray-200 bg-white shadow-lg rounded-lg overflow-hidden">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <div class="h-80 overflo-hidden">
          <img
            class="object-cover w-full h-full transition duration-1000 ease-in-out hover:scale-105 transform"
            src="{{ product.featured_image | image_url }}"
            alt="{{ product.image.alt  }}"
            width=""
            height=""
          >
        </div>
      {% else %}
        <div class="h-80 overflo-hidden">
          {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
        </div>
      {% endif %}
    </a>
    <div class="flex flex-col p-4">
      <span class="text-sm block text-gray-400">{{ product.vendor }}</span>
      <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>
      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>
  </div>
</div>
